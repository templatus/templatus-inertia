{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esNext",
    "module": "esNext",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./app/javascript/*"],
      "@test/*": ["./spec/javascript/*"]
    },
    "strict": true,
    "noImplicitAny": false,
  },
  "include": ["app/javascript/**/*"],
  "exclude": ["node_modules", "public"]
}
